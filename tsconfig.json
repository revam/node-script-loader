{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "target": "esnext",
    "module": "commonjs",
    "sourceMap": false,
    "declaration": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext",
    ],
  },
  "exclude": [
    "dist/**/*.js",
    "dist/**/*.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
